<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.exams_vrochidis.MainActivity">

    <TextView
    android:id="@+id/tv_Categoryname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello World!"
    android:textSize="16sp"
    android:ems="10"
        android:layout_below="@+id/tv_legalName"
        android:layout_alignStart="@+id/tv_legalName" />

    <TextView
        android:id="@+id/tv_ratingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ratingView"
        android:textSize="16sp"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/tv_Categoryname"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_adressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adressView"
        android:textSize="16sp"
        android:ems="10"
        android:layout_below="@+id/tv_Categoryname"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_legalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/legalName"
        android:textSize="16sp"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_adressView" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/star"
        android:id="@+id/star"
        android:adjustViewBounds="false"
        android:layout_toEndOf="@+id/tv_Categoryname"
        android:layout_below="@+id/tv_Categoryname" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/logo"
        android:id="@+id/logo" />


</RelativeLayout>





